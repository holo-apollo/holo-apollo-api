{
  "name": "holo-apollo",
  "description": "Craft Art Marketplace",
  "scripts": {
    "postdeploy": "./scripts/postdeploy.sh"
  },
  "env": {
    "SECRET_KEY": {
      "generator": "secret"
    },
    "DJANGO_SETTINGS_MODULE": "config.settings.review",
    "STAGING_DATABASE_URL": {
      "required": true
    },
    "TEST_DATABASE_URL": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
         "test": "pytest --cov=apps"
      },
      "env": {
        "STAGING_DATABASE_URL": {
          "required": false
        },
        "TEST_DATABASE_URL": {
          "required": true
        }
      }
    }
  }
}
