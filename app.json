{
  "name": "holo-apollo",
  "description": "Craft Art Marketplace",
  "scripts": {
    "postdeploy": "./scripts/postdeploy.sh"
  },
  "env": {
    "SECRET_KEY": {
      "generator": "secret"
    },
    "DJANGO_SETTINGS_MODULE": "config.settings.review",
    "STAGING_DATABASE_URL": {
      "required": true
    },
    "EMAIL_HOST_USER": {
      "required": true
    },
    "EMAIL_HOST_PASSWORD": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
